{
  "name": "project_one_boilerplate",
  "version": "1.0.0",
  "description": "A toolkit / boilerplate for RUTSOMFSF021202",
  "main": "index.js",
  "author": "Dan Vassallo",
  "license": "MIT",
  "scripts": {
    "dev-osx": "yarn docker-ensure-start-osx && yarn docker-exec \"./node_modules/.bin/nodemon index.js\"",
    "dev-win": "yarn docker-ensure-start-win && yarn docker-exec \"./node_modules/.bin/nodemon index.js\"",
    "start": "node index.js",
    "generate-screen": "node ./utils/generateScreenAndRoute.js",
    "rebuild": "yarn docker-remove-network && yarn first-time-setup",
    "first-time-setup": "yarn docker-create-network && yarn docker-build && docker-compose up -d",
    "docker-create-network": "docker network create local",
    "docker-ssh": "docker-compose exec project_one bash",
    "docker-build": "docker-compose down && docker-compose build",
    "docker-exec": "docker-compose exec project_one sh -c",
    "docker-remove-network": "docker-compose down && docker network rm local",
    "docker-ensure-start-osx": "if [ -z `docker ps -q --no-trunc | grep $(docker-compose ps -q project_one)` ]; then docker-compose up -d; fi",
    "docker-ensure-start-win": "docker container inspect projectoneboiler_project_one_1 || docker-compose up -d",
    "lint": "yarn lint-fix && ./node_modules/.bin/eslint --ext .js ./public/javascript/",
    "lint-fix": "./node_modules/.bin/eslint --ext .js ./public/javascript/ --fix"
  },
  "dependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "express": "^4.16.4",
    "fs": "^0.0.1-security",
    "husky": "^1.3.1",
    "path": "^0.12.7",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "nodemon": "^1.18.10"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint"
    }
  }
}
